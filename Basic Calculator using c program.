#include<stdio.h>
int main()
{
    char operator;
    float num1,num2,sum,diff,multi,div;

    printf("\nEnter the operator:");
    scanf("%c",&operator);
    printf("\nEnter the number :");
    scanf("%f",&num1);
    printf("\nEnter the 2nd number :");
    scanf("%f",&num2);
    switch (operator){
        case '+':
        sum= num1 + num2;
        printf("The sum is %.1f\n",sum);
        break;
        case '-':
        diff= num1-num2;
        printf("The difference is %.1f\n",diff);
        break;
        case '*':
        multi = num1*num2;
        printf("The multiplication is %.1f\n",multi);
        break;
        case '/':
        div= num1/num2;
        printf("The division is %.1f\n",div);
        break;
        default:
        printf("Enter a valid operator\n");


    }

   
return 0;
}


